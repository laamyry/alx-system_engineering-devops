#!/usr/bin/bash
# Write 0-custom_http_response_header so that it configures a brand new Ubuntu machine to the requirements asked in this task.
#get sudo access
sudo su
# update sys and install nginx web server
apt-get -y update
apt-get -y install nginx

# Create index HTML.
echo "Hello World!" | tee /var/www/html/index.html

# edit default file
replace="server_name _;\n\trewrite ^\/redirect_me https:\/\/github.com\/laamyry permanent;"
sed -i "s/server_name _;/$replace/" /etc/nginx/sites-enabled/default

# create 404.html
replace="listen 80 default_server;\n\terror_page 404 \/404.html;\n\tlocation = \/404.html {\n\t\troot \/var\/www\/html;\n\t\tinternal;\n\t}"

sed -i "s/listen 80 default_server;/$replace/" /etc/nginx/sites-enabled/default

# edit default file to custom header
sed -i "/server_name _/a add_header X-Served-By $HOSTNAME;" /etc/nginx/sites-enabled/default

# test nginx config
nginx -t

# restart nginx service
service nginx restart

# restart nginx reload
service nginx reload
